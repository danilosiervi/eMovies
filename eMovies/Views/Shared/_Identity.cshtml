@using Microsoft.AspNetCore.Identity;
@inject UserManager<User> UserManager;

@if (!User.Identity.IsAuthenticated)
{
    <a class="btn btn-outline-success my-2 my-sm-0" asp-controller="Users" asp-action="Login">
        <i class="bi bi-box-arrow-in-right"></i>Log In
    </a>

    <span style="padding: 5px;"></span>

    <a class="btn btn-outline-primary my-2 my-sm-0" asp-controller="Users" asp-action="Signup">
        <i class="bi bi-person-plus"></i>Sign Up
    </a>
}
else
{
    <div>
        <a class="btn btn-outline-success" asp-controller="Orders" asp-action="Index">
            <i class="bi bi-person-badge"></i>Hello @UserManager.GetUserName(User)
        </a>
    </div>

    <span style="padding: 5px;"></span>

    <form asp-controller="Users" asp-action="Logout">
        <button class="btn btn-outline-danger my-2 my-sm-0">
            <i class="bi bi-box-arrow-in-right"></i>Log Out
        </button>
    </form>
}
